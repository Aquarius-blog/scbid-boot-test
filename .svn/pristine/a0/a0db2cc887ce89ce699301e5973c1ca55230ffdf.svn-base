	<!-- 修改保证金缴纳状态 -->
	<update id="updatePayTheDeposit" parameterType="java.util.Map">
		UPDATE t_tender_bid_book_sale_record 
		SET IS_PAY_THE_DEPOSIT = #{isPayTheDeposit} 
		WHERE 
		SUPPLIER_ID = #{supplierId} AND PROJECT_ID=#{projectId} AND PACKAGE_ID = #{packageId};
	</update>
	
	<update id="updateBondData" parameterType="java.util.Map">
		update t_tender_bid_book_sale_record 
		set 
		BOND_STATUS = #{bondStatus},
		BOND_ORDER_NO = #{bondOrderNo},
		BOND_ORDER_MONEY = #{bondOrderMoney}
		where LIST_ID = #{listId}
	</update>
	
	<update id="updateStatusById" parameterType="java.util.Map">
		update t_tender_bid_book_sale_record set BOND_STATUS = #{bondStatus} where LIST_ID = #{listId}
	</update>
	
